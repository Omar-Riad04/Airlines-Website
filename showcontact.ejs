<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Flights</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .flight-details {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #e0e0e0;
            border-radius: 8px;
        }
        .flight-info {
            font-size: 18px;
            margin-bottom: 8px;
        }
        .flight-image {
            text-align: center; 
            margin-bottom: 10px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<header>
    <a class="Admin-header" href="#">Welcome Admin</a>
    <nav class="headeritems">
        <a href='admin1'>Home</a>
    </nav>
</header>
<body>
    <div class="container">
        <h1>List of Flights</h1>
        <div id="flightList">
            <% for(let x=0; x<arr.length; x++) { %>
                <div class="flight-details">
                    <div class="flight-info">
                        <strong>User Name:</strong> <%= arr[x].UserName %>
                    </div>
                    <div class="flight-info">
                        <strong>Phone:</strong> <%= arr[x].phone %>
                    </div>
                    <div class="flight-info">
                        <strong>Email:</strong> <%= arr[x].email %>
                    </div>
                    <div class="flight-info">
                        <strong>Message:</strong> <%= arr[x].message %>
                    </div>
                    <div class="flight-info">
                        <strong>File:</strong> <%= arr[x].fileupload %>
                    </div>
                    <div class="flight-image">
                        <img src="<%= arr[x].fileupload %>" alt="Uploaded Image" style="max-width: 100%; height: auto;">
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
